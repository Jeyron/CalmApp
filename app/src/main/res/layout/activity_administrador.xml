<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jeiro.calmapp.Administrador">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="500dp">


            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DescripciÃ³n:"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="26dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:id="@+id/spinne_descripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinne_descripcion"
                android:inputType="textPersonName"
                android:layout_marginTop="120dp"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/spinne_descripcion"
                android:layout_alignEnd="@+id/spinne_descripcion" />

            <Button
                android:id="@+id/button3"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:background="@drawable/boton_redondeado"
                android:textSize="15sp"
                android:textColor="@color/colorBlanco"
                android:layout_below="@+id/editText"
                android:layout_alignStart="@+id/editText"
                android:layout_marginTop="20dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:background="@drawable/boton_redondeado"
                android:textSize="15sp"
                android:textColor="@color/colorBlanco"
                android:layout_alignBaseline="@+id/button3"
                android:layout_alignBottom="@+id/button3"
                android:layout_centerHorizontal="true" />

            <Button
                android:id="@+id/button5"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:background="@drawable/boton_redondeado"
                android:textSize="15sp"
                android:textColor="@color/colorBlanco"
                android:layout_alignBaseline="@+id/button4"
                android:layout_alignBottom="@+id/button4"
                android:layout_alignEnd="@+id/editText" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de iconos:"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_below="@+id/button3"
                android:layout_alignStart="@+id/button3"
                android:layout_marginTop="47dp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_below="@+id/textView4"
                android:layout_alignEnd="@+id/button5"
                android:layout_alignStart="@+id/spinner4" />

            <Spinner
                android:id="@+id/spinner4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spinner3"
                android:layout_alignStart="@+id/textView4"
                android:layout_marginTop="17dp"
                android:layout_alignEnd="@+id/button5" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Agregar"
                android:background="@drawable/boton_redondeado"
                android:textSize="15sp"
                android:textColor="@color/colorBlanco"
                android:layout_below="@+id/spinner4"
                android:layout_alignStart="@+id/spinner4"
                android:layout_marginTop="23dp"
                android:layout_alignEnd="@+id/button3" />

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eliminar"
                android:background="@drawable/boton_redondeado"
                android:textSize="15sp"
                android:textColor="@color/colorBlanco"
                android:layout_alignBaseline="@+id/button6"
                android:layout_alignBottom="@+id/button6"
                android:layout_alignStart="@+id/button4"
                android:layout_alignEnd="@+id/button4" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar"
                android:background="@drawable/boton_redondeado"
                android:textSize="15sp"
                android:textColor="@color/colorBlanco"
                android:layout_alignBaseline="@+id/button7"
                android:layout_alignBottom="@+id/button7"
                android:layout_alignEnd="@+id/spinner4"
                android:layout_alignStart="@+id/button5" />


        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
